<% include partials/header %>
<h1 class="alert alert-primary"><%= title %></h1>
    <div class="container">
        <div class="raw-container">
            <form>
                <center>
                    <label>Enter Text:</label>
                </center>
                <!-- <input type="text" id="rawTextInput"> -->
                <center>
                    <textarea id="rawTextInput" cols="50" rows="5"></textarea>
                </center>
                <div>
                    <button id="convertTextBtn">Convert!</button>
                </div>
                <br>
            </form>
        </div>
        <div class="converted-container">
            <center>
                <label>Converted Text:</label>
            </center>
            <!-- <input type="text" id="convertedTextInput"> -->
            <center>
                <textarea id="convertedTextInput" cols="50" rows="5" readonly data-role="none"></textarea>
            </center>
            <div>
                <button id="copyBtn">Copy</button>
                <button id="resetFieldsBtn">Reset</button>
            </div>
        </div>
    </div>
    <footer class="footer">
        
        <p>View the source code on <a href="https://github.com/bencrossgrove/Mocking-Spongebob-Text-Generator">Github</a></p>
    </footer>
<% include partials/footer %>